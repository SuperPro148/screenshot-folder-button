{
  "schemaVersion": 1,
  "id": "screenshot-folder-button",
  "version": "${version}",

  "name": "Screenshot Folder Button",
  "description": "Adds a button to open your screenshot folder.",
  "authors": [
    "SuperPro148"
  ],
  "contact": {
    "homepage": "https://superpro148.github.io",
    "sources": "https://github.com/SuperPro148/screenshot-folder-button"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/ssfb/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.superpro148.ssfb.ScreenShotFolderButton"
    ],
    "modmenu": [
      "io.github.superpro148.ssfb.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "ssfb.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.14",
    "minecraft": "~1.19",
    "java": ">=17",
    "yet-another-config-lib": "*",
